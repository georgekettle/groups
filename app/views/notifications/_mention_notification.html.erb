<%= link_to channel_path(notification.params[:message].channel, anchor: "message_#{notification.params[:message].id}"), class:"p-2 block", data: {turbo_frame:"_top"} do %>
  <div class="flex justify-between pb-1">
    <h6 class="flex items-center text-xs text-gray-400"><span class="font-semibold text-gray-500 mr-0.5"><%= message.profile.first_name.capitalize %></span>mentioned you in<span class="font-semibold text-gray-500 ml-0.5">#<%= message.channel.name %></span></h6>
    <h6 class="text-xs text-gray-400"><%= time_ago_in_words(message.created_at) %></h6>
  </div>
  <div class="flex p-3 border rounded-lg bg-white">
    <%= render 'components/avatar', profile: message.profile, classes: 'mr-2 flex-shrink-0' %>
    <div>
      <h4 class="font-bold mb-1"><%= message.profile.full_name %></h4>
      <p class="text-gray-800 font-medium leading-5 mb-1"><%= truncate(strip_tags(message.content.to_s), length: 95) %></p>
      <!-- this is fucking up because of nested links... -->
      <%# message.content %>
    </div>
  </div>
<% end %>
