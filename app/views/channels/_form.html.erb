<%= simple_form_for [@group, @channel] do |f| %>
  <%= render 'shared/form_errors', form: f %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-inputs">
    <div class="form-group">
      <%= f.label 'Add members' %>
      <%= render 'components/forms/profile_select',
            index_model: GroupMember.index_name,
            search_options:{"hitsPerPage": 10, "page": 0, "facets": ["*","group.objectID"],"facetFilters": [["group.objectID:#{@group.id}"]]} %>
    </div>
  </div>

  <div class="form-actions">
    <%= submit_with_loader(f) %>
  </div>
<% end %>
