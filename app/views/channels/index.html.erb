<%= render "components/headers/header", header: 'All channels', subheader: @group.name.titleize, back_link: group_path(@group), right: [{icon: 'plus', link: new_group_channel_path(@group), classes: ''}] %>

<%= render 'components/layout/general_layout' do %>
  <div id="channel_list_items">
    <% @channel_members.each do |member| %>
      <%= turbo_stream_from current_user.profile, member.channel, :channel_list_item %>
      <%= render 'components/lists/channel_list_item', channel: member.channel, muted: member.muted?, unread_messages: member.unread_messages? %>
    <% end %>
  </div>
<% end %>
