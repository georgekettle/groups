<!DOCTYPE html>
<html>
  <head>
    <%= render 'shared/head' %>
  </head>

  <body class="bg-tofu w-screen h-screen">
    <% if current_user %>
      <%= turbo_stream_from current_user.profile %>
    <% end %>
    <%= render 'shared/flashes' %>
    <div class="body-content">
      <%= yield %>
    </div>
    <%= render('shared/navbar/navbar') if user_signed_in? %>
    <%= render 'shared/load_screen' %> <!-- will disappear once tailwind is loaded -->
  </body>
</html>
